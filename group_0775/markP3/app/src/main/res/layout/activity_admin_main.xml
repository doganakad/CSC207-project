<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group_0775.flightbookingapp.AdminMain"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_admin_panel"
        android:id="@+id/buttongoAdminpanel"
        android:layout_marginTop="40dp"
        android:onClick="goToAdminPanel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_search"
        android:id="@+id/buttonGoToSearchAdmin"
        android:layout_below="@+id/textViewSCLable"
        android:layout_alignLeft="@+id/buttonSelectClient"
        android:layout_alignStart="@+id/buttonSelectClient"
        android:layout_marginTop="38dp"
        android:onClick="goToSearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selected_client"
        android:id="@+id/textViewSCLable"
        android:layout_below="@+id/buttonSelectClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewSelectedClient"
        android:layout_below="@+id/textViewSCLable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_client"
        android:id="@+id/buttonSelectClient"
        android:layout_below="@+id/buttongoAdminpanel"
        android:layout_centerHorizontal="true"
        android:onClick="selectClient"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_client_info"
        android:id="@+id/buttonAdminGoToClientInfo"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/buttonGoToSearchAdmin"
        android:layout_centerHorizontal="true"
        android:onClick="viewClient"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_clients_bookings"
        android:id="@+id/buttonAClinetBookings"
        android:layout_below="@+id/buttonAdminGoToClientInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="goToBookings"/>

</RelativeLayout>
