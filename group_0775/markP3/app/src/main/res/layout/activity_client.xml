<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group_0775.flightbookingapp.ClientActivity"
    android:background="#4578d7">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_flights_or_itineraries"
        android:id="@+id/buttonSearch"
        android:onClick="goToSearch"
        android:layout_marginBottom="102dp"
        android:layout_above="@+id/buttonViewPersonalInfo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_personal_info"
        android:id="@+id/buttonViewPersonalInfo"
        android:onClick="viewPersonalInformation"
        android:layout_above="@+id/buttonViewBookedItineraries"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_booked_itineraries"
        android:id="@+id/buttonViewBookedItineraries"
        android:onClick="viewBookedItineraries"
        android:layout_marginBottom="146dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
